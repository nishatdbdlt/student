<odoo>
  <!-- PDF Report Registration -->
  <report
  id="report_summary"
  model="class.report.wizard"
  string="Class Summary"
  report_type="qweb-pdf"
  name="students.class_summary_template"
  file="students.class_summary_template"
  attachment_use="False"
/>

  <!-- QWeb Template -->
  <template id="class_summary_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="wizard">
        <t t-set="school" t-value="wizard.env['ir.config_parameter'].sudo().get_param('school.name') or 'Your School Name'"/>
        <div class="page">
          <!-- Header -->
          <h2 t-esc="school" style="text-align: center;"/>
          <h3 style="text-align: center;">Class Report</h3>
          <hr/>

          <!-- Class & Section Info -->
          <table class="table table-sm mt16 mb16">
            <tr>
              <th>Class:</th>
              <td t-esc="wizard.class_id.name"/>
              <th>Section:</th>
              <td t-esc="wizard.section_id.name"/>
            </tr>
            <tr>
              <th>Class Teacher:</th>
              <td colspan="3" t-esc="wizard.class_teacher_id.name or '-'"/>
            </tr>
          </table>

          <!-- Subjects & Teachers Table -->
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>#</th>
                <th>Subject</th>
                <th>Teacher</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach="wizard.line_ids" t-as="line" t-key="line.id">
                <tr>
                  <td t-esc="loop.index"/>
                  <td t-esc="line.subject_id.name"/>
                  <td t-esc="line.teacher_id.name"/>
                </tr>
              </t>
            </tbody>
          </table>
        </div>
      </t>
    </t>
  </template>
</odoo>
