<odoo>
  <template id="student_id_card_template">
    <t t-call="web.basic_layout">
      <div style="width:3.4in; height:2.1in; border:1px solid black; padding:8px; font-size:10px;">
        <div style="text-align:center; font-weight:bold; font-size:12px;">
          <t t-if="res_company.logo">
            <img t-att-src="'data:image/png;base64,%s' % res_company.logo" style="height:30px;"/><br/>
          </t>
          <t t-esc="res_company.name"/>
        </div>
        <hr/>
        <div style="margin-left:10px;">
          <strong>Name:</strong> <t t-esc="doc.student_id.name"/><br/>
          <strong>Class:</strong> <t t-esc="doc.student_id.class_id._name"/><br/>
          <strong>Section:</strong> <t t-esc="doc.student_id.section_id.name"/><br/>
          <strong>Shift:</strong> <t t-esc="doc.student_id.shift_id.name"/><br/>
        </div>
      </div>
    </t>
  </template>

  <record id="action_report_student_id" model="ir.actions.report">
    <field name="name">Student ID Card</field>
    <field name="model">student.id.card.wizard</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">students.student_id_card_template</field>
    <field name="report_file">students.student_id_card_template</field>
    <field name="binding_model_id" ref="model_student_id_card_wizard"/>
    <field name="print_report_name">'Student_ID_Card'</field>
  </record>
</odoo>
