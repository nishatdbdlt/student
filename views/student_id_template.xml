<odoo>
  <template id="student_id_card_template">
    <t t-call="web.basic_layout">
      <t t-set="doc" t-value="docs[0]"/>
      <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">

        <!-- ID Card Container -->
        <div class="card shadow-sm border" style="width: 85.6mn; height: 54mm; padding: 8px; font-size: 10px;">
          <div class="card-body p-1 text-center">

            <!-- School Logo and Name (moved slightly down) -->
            <div style="margin-top: 10px; margin-bottom: 10px;">
              <t t-if="res_company.logo">
                <img t-att-src="'data:image/png;base64,%s' % res_company.logo" class="mb-1" style="height: 30px;" />
              </t>
              <div class="fw-bold mt-1" style="font-size: 12px;">
                <t t-esc="res_company.name"/>
              </div>
            </div>

            <hr class="my-1"/>

            <!-- Student Photo -->
            <t t-if="doc.student_id.photo">
              <img t-att-src="'data:image/png;base64,%s' % doc.student_id.photo"
                   class="rounded-circle"
                   style="height: 70px; width: 70px; object-fit: cover; margin: 6px 0;"/>
            </t>

            <!-- Student Info - shifted down -->
            <div class="text-start mt-2" style="padding-left: 8px;">
              <p class="mb-1"><strong>Name:</strong> <t t-esc="doc.student_id.name"/></p>
              <p class="mb-1"><strong>Roll:</strong> <t t-esc="doc.student_id.roll"/></p>
              <p class="mb-1"><strong>Class:</strong> <t t-esc="doc.student_id.class_id.name"/></p>
              <p class="mb-1"><strong>Section:</strong> <t t-esc="doc.student_id.section_id.name"/></p>
              <p class="mb-1"><strong>Shift:</strong> <t t-esc="doc.student_id.shift_id.shift_name"/></p>
            </div>

            <!-- Footer -->
            <hr class="my-2"/>
            <div class="text-center mt-1" style="font-size: 8px; color: #555;">
              Powered by Your School ERP
            </div>

          </div>
        </div>
      </div>
    </t>
  </template>

  <record id="action_report_student_id" model="ir.actions.report">
    <field name="name">Student ID Card</field>
    <field name="model">student.id.card.wizard</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">students.student_id_card_template</field>
    <field name="report_file">students.student_id_card_template</field>
    <field name="binding_model_id" ref="model_student_id_card_wizard"/>
    <field name="print_report_name">'Student_ID_Card'</field>
  </record>
</odoo>
